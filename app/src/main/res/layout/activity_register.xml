<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff4500"
    tools:context=".register">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="15dp"
        android:id="@id/name"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:hint="Name"
        android:background="#ffff"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/name"
        android:id="@+id/email"
        android:hint="email address"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:layout_margin="15dp"
        android:background="#ffff"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/email"
        android:id="@+id/mobile"
        android:hint="mobile"
        android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
        android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
        android:layout_margin="15dp"
        android:background="#ffff"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/mobile"
        android:id="@+id/delivery"
        android:hint="delivery address"
        android:layout_margin="15dp"
        android:background="#ffff"
        android:drawableStart="@drawable/delivery"
        android:drawableLeft="@drawable/delivery"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/delivery"
        android:id="@+id/password"
        android:hint="password"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_margin="15dp"
        android:background="#ffff"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="confirm"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_below="@+id/password"
        android:id="@+id/cpassword"
        android:layout_margin="15dp"
        android:background="#ffff"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="25dp"
        android:layout_below="@id/cpassword"
        android:text="register"
        android:textSize="20sp"
        android:background="#adff2f"/>



</RelativeLayout>